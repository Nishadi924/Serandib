<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".TheGrandKandyanHotel"
    android:orientation="horizontal">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="The Grand Kandyan Hotel"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:textSize="25sp"
        android:textColor="@android:color/black"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="51dp"
        android:src="@drawable/kandyan"
        android:layout_alignParentLeft="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".EarlsRegencyHotel"
        android:layout_alignParentLeft="true">

        <RatingBar
            android:id="@+id/rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="0.5" />

        <Button
            android:id="@+id/bt_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="submit"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="336dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="30dp"
            android:text="Our Recomended deal"
            android:textColor="@android:color/black"
            android:textSize="30dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/booking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:text="www.booking.com"
            android:textSize="15dp"
            android:textColor="@android:color/holo_orange_dark"/>
        <TextView
            android:id="@+id/Expedia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:textSize="15dp"
            android:text= "www.expedia.com"
            android:textColor="@android:color/holo_orange_dark"/>
        <TextView
            android:id="@+id/Hotels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:textSize="15dp"
            android:text= "www.Hotels.com"/>

        <TextView
            android:id="@+id/Agoda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:text="www.Agoda.com"
            android:textSize="15dp" />


    </LinearLayout>


</RelativeLayout>